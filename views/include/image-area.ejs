<div class="chat-div">
  <div class="chat-section">
    <div
      class="chat-bt-gpt chat"
      style="
        width: 100%;
        color: rgba(224, 53, 53, 0.726);
        font-size: 2rem;
        text-align: center;
      "
    >
      <p><%= status %></p>
    </div>
  </div>

  <% if(modeon) {%>
  <form action="/" method="post">
    <div class="input">
      <input type="text" name="value" placeholder="Search" />
      <button type="submit">
        <img
          width="40"
          height="40"
          src="https://img.icons8.com/fluency/96/000000/sent.png"
          alt="sent"
        />
      </button>
    </div>
  </form>
  <% } %>
</div>
